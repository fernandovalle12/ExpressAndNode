<div class="card" style="width: 18rem;">
  <img src="<%= `${product.image}` %>" style="width: 280px; height: 280px;" class="card-img-top">
  <div class="card-body">
    <h5 class="card-title">
      <%= product.title %>
    </h5>
    <p class="card-text">
      <%= product.description %>
    </p>
    <p class="card-text">
      <%= product.price %>
    </p>
    <a href="#" class="btn btn-primary">Add on cart</a>
  </div>
</div>